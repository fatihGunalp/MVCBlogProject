@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <a href="/Admin/Category/Create" class="btn btn-success btn-xs"><i class="icon-ok"></i>Kategori Ekle</a>
                </header>
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th> Category Name</th>
                            <th> Created Date</th>
                            <th> Status</th>
                            <th><i class=" icon-edit"></i> Edit</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ctg in Model)
                        {
                            <tr>
                                <td>@ctg.CategoryName</td>
                                <td >@ctg.CreatedDate</td>
                                <td><span class="label label-info label-mini">@ctg.Status</span></td>
                                <td>
                                    <a href="/Admin/Category/Active/@ctg.ID" class="btn btn-success btn-xs"><i class="icon-ok"></i></a>
                                    <a href="/Admin/Category/Update/@ctg.ID" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></a>
                                    <a href="/Admin/Category/Delete/@ctg.ID" class="btn btn-danger btn-xs"><i class="icon-trash"></i></a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </section>
        </div>
    </div>
