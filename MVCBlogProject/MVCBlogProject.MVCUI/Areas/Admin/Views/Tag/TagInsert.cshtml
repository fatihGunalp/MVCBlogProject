@model MVCBlogProject.MODEL.Entities.Tag
@{
    ViewBag.Title = "Yeni Etiket Oluştur";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Etiket Ekle
                </header>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Metin</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(m => m.Text, new { @class = "control-label col-md-2" })
                            </div>
                        </div><br /><br />
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Ekle</button>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>

