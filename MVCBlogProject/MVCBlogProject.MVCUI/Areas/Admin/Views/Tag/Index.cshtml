@model List<Tag>
@{
    ViewBag.Title = "Etiketler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <a href="/Admin/Tag/TagInsert" class="btn btn-success btn-xs"><i class="icon-ok"></i>Etiket Ekle</a>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th> Metin</th>
                        <th> Durum</th>
                        <th> Ekleme Tarih</th>
                        <th><i class=" icon-edit"></i> Düzenle</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tg in Model)
                    {
                    <tr>
                        <td>@tg.Text</td>
                        <td><span class="label label-info label-mini">@tg.Status</span></td>
                        <td>@tg.CreatedDate</td>
                        <td>
                            <a href="/Admin/Tag/TagInsert" class="btn btn-success btn-xs"><i class="icon-ok"></i></a>
                            <a href="/Admin/Tag/TagUpdate/@tg.ID" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></a>
                            <a href="/Admin/Tag/Delete/@tg.ID" class="btn btn-danger btn-xs"><i class="icon-trash"></i></a>
                        </td>
                    </tr>
                    }


                </tbody>
            </table>
        </section>
    </div>
</div>
